<h1 class="text-center"> <%= @category.name %> Recipes</h1>
<div class="table-responsive">
<table class="table">
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Difficulty</th>
    <th>Prep Time</th>
  </tr>


  <% @category.recipes.each do |recipe|%>
  <tr>
  <td><%= link_to "#{recipe.title}", recipe_path(recipe)%></td>
    <td><%= link_to "#{recipe.user.email}", user_path(recipe.user) %></td>
    <!-- NEED TO ADD USER SHOW PATH ONCE USER SHOW WORKING -->
    <td><%= recipe.difficulty%></td>
    <td><%= recipe.prep_time%></td>
  </tr>
  <% end %>
</table>
</div>